{
  "extends": "expo/tsconfig.base",
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2015",
    "module": "ES2015",
    "lib": ["es2020"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "outDir": "./ts-build/",
    "strict": true
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
